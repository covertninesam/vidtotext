{
	"manifest_version": 2,
	"name": "Vid To Text",
	"description": "Converts any text in a paused video into copy-pasteable text.",
	"version": "1.0",

	"browser_action": {
		"default_icon": "assets/icon.png",
		"default_popup": "popup.html"
	},

	// "options_page" : "options.html",

	// "background" : {
	// 	"scripts" : ["eventPage.js"],
	// 	"persistent" : false
	// },

	// just to get things working in dev mode, probably should remove for prod
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"permissions" : [
		"storage",
		"notifications",
		"contextMenus",
		"tabs",
		"<all_urls>"
	]
}