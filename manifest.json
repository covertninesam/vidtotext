{
	"manifest_version": 2,
	"name": "Vid Kid",
	"description": "Converts any text in a paused video into copy-pasteable text.",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"options_page" : "options.html",

	"background" : {
		"scripts" : ["eventPage.js"],
		"persistent" : false
	},

	"permissions" : [
		"storage",
		"notifications",
		"contextMenus",
		"tabs",
		"<all_urls>"
	]
}